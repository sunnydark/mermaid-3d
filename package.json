{
  "name": "mermaid-3d",
  "version": "0.1.2",
  "description": "Drop-in replacement for Mermaid.js that renders diagrams in isometric 3D style with floating shadows, pan, zoom, and fly-to interactions",
  "type": "module",
  "main": "dist/mermaid-3d.umd.js",
  "module": "dist/mermaid-3d.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/mermaid-3d.es.js",
      "require": "./dist/mermaid-3d.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "build:demo": "vite build --config vite.demo.config.ts",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunnydark/mermaid-3d.git"
  },
  "homepage": "https://github.com/sunnydark/mermaid-3d#readme",
  "bugs": {
    "url": "https://github.com/sunnydark/mermaid-3d/issues"
  },
  "keywords": [
    "mermaid",
    "diagram",
    "isometric",
    "3d",
    "svg",
    "flowchart",
    "sequence-diagram",
    "class-diagram",
    "state-diagram",
    "gantt",
    "pie-chart",
    "gitgraph",
    "mindmap",
    "timeline",
    "visualization"
  ],
  "author": "SunnyDark",
  "license": "MIT",
  "peerDependencies": {
    "mermaid": ">=10.0.0"
  },
  "peerDependenciesMeta": {
    "mermaid": {
      "optional": false
    }
  },
  "devDependencies": {
    "mermaid": "^11.0.0",
    "playwright": "^1.58.2",
    "typescript": "^5.5.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0"
  }
}
